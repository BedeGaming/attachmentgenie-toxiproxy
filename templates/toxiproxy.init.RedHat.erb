#!/bin/env sh
# /etc/init.d/toxiproxy
#
# chkconfig:   2 3 4 5 90 60
# description: Enable toxiproxy.

### BEGIN INIT INFO
# Provides:          toxiproxy
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Should-Start:
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start toxiproxy at boot time.
# Description:       Enable toxiproxy.
### END INIT INFO

# Source function library.
. /etc/rc.d/init.d/functions

BIN="<%= scope['toxiproxy::install_dir'] %>/toxiproxy"
NAME="<%= scope['toxiproxy::service_name'] %>"
toxiproxy_OPTS="-port 8474 -host 0.0.0.0"

lockfile=/var/lock/subsys/$NAME

start() {
  [ -x $BIN ] || exit 5
  echo -n $"Starting $NAME: "
  daemon $BIN $toxiproxy_OPTS> /dev/null 2>&1 &
  retval=$?
  echo
  [ $retval -eq 0 ] && touch $lockfile
  return $retval
}

stop() {
  echo -n $"Stopping $NAME: "
  killproc $NAME -TERM
  retval=$?
  echo
  [ $retval -eq 0 ] && rm -f $lockfile
  return $retval
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
  status)
    status $NAME
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart}"
    exit 2
    ;;
esac

exit $?